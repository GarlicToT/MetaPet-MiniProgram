.button-container {
    display: flex;
    flex-direction: row;
    margin-left: 10px;
    margin-right: 10px;
}

    .button {
        margin-bottom: 5px;
        margin-top: 20px;
        padding: 10px 15px;
        background-color: #78a0bb;
        outline: 3px #007ACC solid;
        outline-offset: -3px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        transition: 400ms;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        width: 11em;
        outline: none;
        transition: 0.1s;
        font-size: 10px;
        font-weight: bold;
      }
      
      .button .text {
        color: white;
        font-weight: 700;
        font-size: 1em;
        transition: 400ms;
      }
      
      .button svg path {
        transition: 400ms;
      }
      
      .button:hover {
        background-color: white;
      }
      
      .button:hover .text {
        color: #007ACC;
      }
      
      .button:hover svg path {
        fill: #007ACC;
      }

      .button-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
      
      .button-image {
        width: 45px; 
        height: 45px; 
        object-fit: cover; 
      }
      
      .button-text {
        margin-top: 3px; 
      }
      
      
.card-container {
/* Styles for the card container */
display: flex;
flex-direction: column;
align-items: center;
justify-content: center;
margin-top: 13px;
}

.card {
    width: 85%;
    height: 160px;
    background: #07182E;
    position: relative;
    display: flex;
    place-content: center;
    place-items: center;
    overflow: hidden;
    border-radius: 20px;
    margin-top: 10px;
    color: white;
  }
  
.card text {
    z-index: 1;
    color: white;
    font-size: 20px;
    margin: 0;
    padding: 0;
    text-align: center;
  }
  
  .card::before {
    content: '';
    position: absolute;
    width: 85%;
    background-image: linear-gradient(180deg, rgb(0, 183, 255), rgb(255, 48, 255));
    height: 130%;
    animation: rotBGimg 3s linear infinite;
    transition: all 0.2s linear;
  }
  
  @keyframes rotBGimg {
    from {
      transform: rotate(0deg);
    }
  
    to {
      transform: rotate(360deg);
    }
  }
  
  .card::after {
    content: '';
    position: absolute;
    background: #07182E;
    inset: 5px;
    border-radius: 15px;
  }  
  
  .bottom-navigation {
    display: flex;
    justify-content: space-between;
    width: 100%;
    background-color: #FFFFFF;
    padding: 10px;
    position: fixed;
    bottom: 0;
  }
  
  .navigation-item {
    font-size: 14px;
    color: #000000;
  }