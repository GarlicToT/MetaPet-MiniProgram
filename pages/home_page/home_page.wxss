/* pages/home/home.wxss */
.page-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background-color: #171846;
  }

  .title-style{
      display: flex;
      flex-direction: row;
      justify-content: center;
      margin-bottom: 5px;
  }

  .title-frame {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 10px;
    margin-left: 5px;
    margin-right: 5px;
    padding: 4px;
    background-image: linear-gradient(144deg,#AF40FF, #5B42F3 50%,#00DDEB);
    border: 0;
    border-radius: 8px;
    box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
    box-sizing: border-box;
    color: #FFFFFF;
    display: flex;
    font-size: 18px;
    justify-content: center;
    line-height: 1em;
    max-width: 100%;
    min-width: 120px;
    text-decoration: none;
    white-space: nowrap;
    cursor: pointer;
  }
  
  .title-line {
    /* flex: 1; */
    /* height: 1px; */
    color: #72BFF3;
    opacity: 0.5;
    position: relative;
    font-weight: bold;
  }

  .title {
    font-size: 13px;
    font-weight: bold;
    color: white;
    padding: 0 10px;
    margin: 0 10px;
  }

  .picture-frame {
    width: 300px;
    height: 300px;
    border: 2px solid white;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }
  
  .picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .button-frame {
    width: 300px;
    height: auto;
    display: flex;
    justify-content: space-around;
    margin-bottom: 20px;
    flex-direction: column;
    color: white;
    border: 2px groove white;
    clip-path: polygon(30px 0%, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%, 0% 30px);
    border-color: linear-gradient(315deg,#03a9f4,#ff0058);
  }

  /* .button-frame::before{
    background: linear-gradient(315deg,#03a9f4,#ff0058);
    filter: blur(30px);
  } */

  .bottom-navigation {
    display: flex;
    justify-content: space-between;
    width: 100%;
    background-color: #FFFFFF;
    padding: 10px;
    position: fixed;
    bottom: 0;
  }
  
  .navigation-item {
    font-size: 14px;
    color: #000000;
  }
  
  .button {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 20px;
    width: 11em;
    height: 4em;
    outline: none;
    margin-bottom: 20px;
    transition: 0.1s;
    background-color: transparent;
    /* border: none; */
    font-size: 13px;
    font-weight: bold;
    color: #ddebf0;
    --color: #505EB1;
    border: 5px double var(--color);
    box-shadow: inset 0px 0px 15px #505EB1;
    clip-path: polygon(50% 0, 100% 50%, 50% 100%, 0 50%);
}